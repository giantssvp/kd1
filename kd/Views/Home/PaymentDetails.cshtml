@{
    ViewBag.Title = "PaymentDetails";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    var elist = ViewBag.edit_list;
    bool edit = false;
    if (ViewBag.edit_str == "edit")
    {
        edit = true;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Dashboard", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("PaymentDetails", "Home")'>Add Payment Details</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Add Payment Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_paymentdetails","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Amount</label></td>
                                    <td><input type="number" name="pamt" id="required" @(edit ? new { value = elist[1] } : null)></td>
                                    <td><label class="control-label">Date</label></td>
                                    <td> <input type="date" name="pdate" id="required" @(edit ? new { value = @Convert.ToDateTime(elist[2]).ToString("yyyy-MM-dd") } : null)></td>
                                    <td><label class="control-label">Payment Mode</label></td>
                                    <td><input type="text" name="pmode" id="required" @(edit ? new { value = elist[3] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Cheque ID</label></td>
                                    <td><input type="text" name="chkid" id="required" @(edit ? new { value = elist[4] } : null)></td>
                                    <td><label class="control-label">Cheque Date</label></td>
                                    <td> <input type="date" name="chkdate" id="required" @(edit ? new { value = @Convert.ToDateTime(elist[5]).ToString("yyyy-MM-dd") } : null)></td>
                                    <td><label class="control-label">Bank Name</label></td>
                                    <td><input type="text" name="bname" id="required" @(edit ? new { value = elist[6] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Payment Type</label></td>
                                    <td>
                                        <select name="ptype" id="required">
                                            <option value="pdc" @(edit ? (elist[7].Contains("pdc") ? "selected" : "") : "selected")>PDC</option>
                                            <option value="adjust" @(edit ? (elist[7].Contains("adjust") ? "selected" : "") : "")>Adjust</option>
                                            <option value="customer" @(edit ? (elist[7].Contains("customer") ? "selected" : "") : "")>Customer</option>
                                            <option value="dd" @(edit ? (elist[7].Contains("dd") ? "selected" : "") : "")>DD</option>
                                            <option value="other" @(edit ? (elist[7].Contains("other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Builder Pay</label></td>
                                    <td>
                                        <select name="bldpay" id="required">
                                            <option value="paid" @(edit ? (elist[8].Contains("paid") ? "selected" : "") : "selected")>Paid</option>
                                            <option value="unpaid" @(edit ? (elist[8].Contains("unpaid") ? "selected" : "") : "")>Unpaid</option>
                                            <option value="cancel" @(edit ? (elist[8].Contains("cancel") ? "selected" : "") : "")>Cancel</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Bank Pay</label></td>
                                    <td>
                                        <select name="bnkpay" id="required">
                                            <option value="paid" @(edit ? (elist[9].Contains("paid") ? "selected" : "") : "selected")>Paid</option>
                                            <option value="unpaid" @(edit ? (elist[9].Contains("unpaid") ? "selected" : "") : "")>Unpaid</option>
                                            <option value="cancel" @(edit ? (elist[9].Contains("cancel") ? "selected" : "") : "")>Cancel</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Status</label></td>
                                    <td><input type="text" name="sts" id="required" @(edit ? new { value = elist[10] } : null)></td>
                                    <td><label class="control-label">Customer Name</label></td>
                                    <td>
                                        <select name="bid" id="bid">    </select>
                                    </td>
                                    @if (edit)
                                    {
                                        <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                        <td> <input type="hidden" name="edit_id" value=@elist[0] /> </td>
                                    }
                                    else
                                    {
                                        <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            @if (!edit)
            {
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>All Payment Details</h5>
                        <div class="select-site">
                            <h5>Booking Name</h5>
                            <div class="dataTables_length">
                                <select name="site_name" id="site_name" style="max-width:90%;">
                                    <option value="Mangesh"> Mangesh</option>
                                    <option value="Ramesh"> Ramesh</option>
                                    <option value="Shivaji"> Shivaji</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content nopadding">
                        @Html.Partial("page_size")
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Commit Type</th>
                                    <th>Payment Mode</th>
                                    <th>Cheque ID</th>
                                    <th>Bank Name</th>
                                    <th>Builder Pay</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < cnt; i++)
                                {
                                    <tr class="gradeX">
                                        <td>@results[0][i]</td>
                                        <td>@results[7][i]</td>
                                        <td>@results[3][i]</td>
                                        <td>@results[4][i]</td>
                                        <td>@results[6][i]</td>
                                        <td>@results[8][i]</td>
                                        <td align="center">
                                            <button onclick="fun_edit(this);" value="@results[0][i]" class="btn btn-primary">Edit</button>
                                            <button onclick="fun_del(this);" value="@results[0][i]" class="btn btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("pagination")
                </div>
            }
            </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.ui.custom.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/matrix.popover.js"></script>
<script src="~/Scripts/jquery.uniform.js"></script>
<script src="~/Scripts/select2.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/matrix.js"></script>
<script src="~/Scripts/matrix.tables.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/matrix.form_validation.js"></script>

<script type="text/javascript">
    function fun_del(obj)
    {
        if (confirm('Are you sure you want to delete this record?'))
        {
            window.location = '@Html.Raw(@Url.Action("delete_record", "Home", new { page = "PaymentDetails", ps = "id", search = "srch_str", del_id = "delid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("delid", obj.value);
        }
    }

    function fun_edit(obj)
    {
        window.location = '@Html.Raw(@Url.Action("edit_record", "Home", new { page = "PaymentDetails", ps = "id", search = "srch_str", edit_id = "editid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("editid", obj.value);
    }
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#page_size").change(function () {
            window.location = '@Html.Raw(@Url.Action("PaymentDetails", "Home", new { ps = "id", search = "srch_str" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val());
        });
    });

    $(document).ready(function () {
        $("#search1").keydown(function (event) {
            if (event.keyCode == 13) {
                window.location = '@Html.Raw(@Url.Action("PaymentDetails", "Home", new { ps = "id", search = "srch_str" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val());
            }
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: '@Url.Action("get_customer_booking_name", "Home")',
            data: {},
            dataType: 'json',
            success: function (d) {
                var list1 = d.id;
                var list = d.name;
                $("#bid").html("");
                $.each(list, function (index, value) {
                    $("#bid").append($('<option></option>').val(list1[index]).html(value));
                });
                document.getElementById("bid").value = @(edit ? elist[11] : 1);
            },
            error: function (err) {
                alert(err.responseText);
            },
        });
    });
</script>

