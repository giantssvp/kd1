@{
    ViewBag.Title = "PaymentDetails";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Dashboard", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("PaymentDetails", "Home")'>Add Payment Details</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Add Payment Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_paymentdetails","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Amount</label></td>
                                    <td><input type="number" name="pamt" id="required"></td>
                                    <td><label class="control-label">Date</label></td>
                                    <td> <input type="date" name="pdate" id="required"></td>
                                    <td><label class="control-label">Payment Mode</label></td>
                                    <td><input type="text" name="pmode" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Cheque ID</label></td>
                                    <td><input type="text" name="chkid" id="required"></td>
                                    <td><label class="control-label">Cheque Date</label></td>
                                    <td> <input type="date" name="chkdate" id="required"></td>
                                    <td><label class="control-label">Bank Name</label></td>
                                    <td><input type="text" name="bname" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Payment Type</label></td>
                                    <td>
                                        <select name="ptype" id="required">
                                            <option value="pdc" selected="selected">PDC</option>
                                            <option value="adjust">Adjust</option>
                                            <option value="customer">Customer</option>
                                            <option value="dd">DD</option>
                                            <option value="other">Other</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Builder Pay</label></td>
                                    <td> 
                                        <select name="bldpay" id="required">
                                            <option value="paid" selected="selected">Paid</option>
                                            <option value="unpaid">Unpaid</option>
                                            <option value="cancel">Cancel</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Bank Pay</label></td>
                                    <td>
                                        <select name="bnkpay" id="required">
                                            <option value="paid" selected="selected">Paid</option>
                                            <option value="unpaid">Unpaid</option>
                                            <option value="cancel">Cancel</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Status</label></td>
                                    <td><input type="text" name="sts" id="required"></td>
                                    <td><label class="control-label">Customer Name</label></td>
                                    <td> <textarea class="span11"></textarea></td>
                                    <td><input type="submit" value="Save" class="btn btn-success" /></td>
                                    <td><input type="reset" value="Cancel" class="btn btn-danger" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>All Payment Details</h5> 
                    <div class="select-site">
                        <h5>Booking Name</h5>
                        <div class="dataTables_length">
                            <select name="site_name" id="site_name" style="max-width:90%;">
                                <option value="Mangesh"> Mangesh</option>
                                <option value="Ramesh"> Ramesh</option>
                                <option value="Shivaji"> Shivaji</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="widget-content nopadding">
                    @Html.Partial("page_size")
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Commit Type</th>
                                <th>Payment Mode</th>
                                <th>Cheque ID</th>
                                <th>Bank Name</th>
                                <th>Builder Pay</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < cnt; i++)
                            {
                                <tr class="gradeX">
                                    <td>@results[0][i]</td>
                                    <td>@results[7][i]</td>
                                    <td>@results[3][i]</td>
                                    <td>@results[4][i]</td>
                                    <td>@results[6][i]</td>
                                    <td>@results[8][i]</td>
                                    <td align="center"><button class="btn btn-primary">Edit</button> <button class="btn btn-danger">Delete</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @Html.Partial("pagination")
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.ui.custom.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/matrix.popover.js"></script>
<script src="~/Scripts/jquery.uniform.js"></script>
<script src="~/Scripts/select2.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/matrix.js"></script>
<script src="~/Scripts/matrix.tables.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/matrix.form_validation.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#page_size").change(function () {
            window.location = '@Html.Raw(@Url.Action("PaymentDetails", "Home", new { ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#pagination_first").click(function () {
            window.location = '@Html.Raw(@Url.Action("First", "Home", new { page = "PaymentDetails", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
    $(document).ready(function () {
        $("#pagination_previous").click(function () {
            window.location = '@Html.Raw(@Url.Action("Previous", "Home", new { page = "PaymentDetails", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
    $(document).ready(function () {
        $("#pagination_next").click(function () {
            window.location = '@Html.Raw(@Url.Action("Next", "Home", new { page = "PaymentDetails", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
    $(document).ready(function () {
        $("#pagination_last").click(function () {
            window.location = '@Html.Raw(@Url.Action("Last", "Home", new { page = "PaymentDetails", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
</script>