    $(document).ready(function () {
        $("#pagination_first").click(function () {
            window.location = '@Html.Raw(@Url.Action("First", "Home", new { page = "BuilderCostSheet", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
    $(document).ready(function () {
        $("#pagination_previous").click(function () {
            window.location = '@Html.Raw(@Url.Action("Previous", "Home", new { page = "BuilderCostSheet", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
