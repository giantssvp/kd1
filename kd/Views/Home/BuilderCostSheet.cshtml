            window.location = '@Html.Raw(@Url.Action("Next", "Home", new { page = "BuilderCostSheet", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
    $(document).ready(function () {
        $("#pagination_last").click(function () {
            window.location = '@Html.Raw(@Url.Action("Last", "Home", new { page = "BuilderCostSheet", ps = "id" }))'.replace("id", $("#page_size option:selected").text());
        });
    });
</script>