@{
    ViewBag.Title = "Daily Enquiry";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    int? sz = new int?();
    sz = ViewBag.pageSize;
    if (sz == null)
    {
        sz = 10;
    }
    var elist = ViewBag.edit_list;
    bool edit = false;
    if (ViewBag.edit_str == "edit")
    {
        edit = true;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Dashboard", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("Index", "Home")'>Daily Enquiry</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Daily Enquiry - Customer Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_enquiry","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Customer Name</label></td>
                                    <td><input type="text" name="enqname" id="required" @(edit ? new { value = elist[11] } : null)></td>
                                    <td><label class="control-label">Address</label></td>
                                    <td> <input type="text" name="enqaddress" id="required" @(edit ? new { value = elist[12] } : null)></td>
                                    <td><label class="control-label">Mobile No(Whatsapp)</label></td>
                                    <td><input type="number" name="enqmob" id="required" @(edit ? new { value = elist[13] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Alternate Mobile</label></td>
                                    <td><input type="number" name="enqaltmob" id="required" @(edit ? new { value = elist[14] } : null)></td>
                                    <td><label class="control-label">Email Id</label></td>
                                    <td><input type="email" name="enqemail" id="required" @(edit ? new { value = elist[15] } : null)></td>
                                    <td><label class="control-label">Requirement</label></td>
                                    <td>
                                        <select multiple name="enqrequirement" id="required">
                                            <option value="1RK" @(edit ? (elist[16].Contains("1RK") ? "selected" : "") : "selected")>1RK</option>
                                            <option value="1BHK" @(edit ? (elist[16].Contains("1BHK") ? "selected" : "") : "")>1BHK</option>
                                            <option value="2BHK" @(edit ? (elist[16].Contains("2BHK") ? "selected" : "") : "")>2BHK</option>
                                            <option value="3BHK" @(edit ? (elist[16].Contains("3BHK") ? "selected" : "") : "")>3BHK</option>
                                            <option value="3BHK" @(edit ? (elist[16].Contains("Plot") ? "selected" : "") : "")>Plot</option>
                                            <option value="Other" @(edit ? (elist[16].Contains("Other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Occupation</label></td>
                                    <td>
                                        <select name="enqoccu" id="required">
                                            <option value="Salaried" @(edit ? (elist[17].Contains("Salaried") ? "selected" : "") : "selected")>Salaried</option>
                                            <option value="Business" @(edit ? (elist[17].Contains("Business") ? "selected" : "") : "")>Business</option>
                                            <option value="Pensioner" @(edit ? (elist[17].Contains("Pensioner") ? "selected" : "") : "")>Pensioner</option>
                                            <option value="Other" @(edit ? (elist[17].Contains("Other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Income</label></td>
                                    <td><input type="number" name="enqincome" id="required" @(edit ? new { value = elist[18] } : null)></td>
                                    <td><label class="control-label">Budget</label></td>
                                    <td><input type="number" name="enqbudget" id="required" @(edit ? new { value = elist[19] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">

                                    <td><label class="control-label">Down Payment</label></td>
                                    <td><input type="number" name="enqdown" id="required" @(edit ? new { value = elist[20] } : null)></td>
                                    <td><label class="control-label">Current Status</label></td>
                                    <td>
                                        <select name="enqcurstatus" id="required">
                                            <option value="Interested" @(edit ? (elist[22].Contains("Interested") ? "selected" : "") : "selected")>Interested</option>
                                            <option value="Not Interested" @(edit ? (elist[22].Contains("Not Interested") ? "selected" : "") : "")>Not Interested</option>
                                            <option value="In Process" @(edit ? (elist[22].Contains("In Process") ? "selected" : "") : "")>In Process</option>
                                            <option value="Booked" @(edit ? (elist[22].Contains("Booked") ? "selected" : "") : "")>Booked</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Visit</label></td>
                                    <td>
                                        <select name="enqvisit" id="required">
                                            <option value="Visited" @(edit ? (elist[21].Contains("Visited") ? "selected" : "") : "selected")>Visited</option>
                                            <option value="Enquiry" @(edit ? (elist[21].Contains("Enquiry") ? "selected" : "") : "")>Enquiry</option>
                                            <option value="Other" @(edit ? (elist[21].Contains("Other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Source</label></td>
                                    <td>
                                        <select name="enqsource" id="enqsource">
                                            <option value="Reference" @(edit ? (elist[23].Contains("Reference") ? "selected" : "") : "selected")>Reference</option>
                                            <option value="Advertisement" @(edit ? (elist[23].Contains("Advertisement") ? "selected" : "") : "")>Advertisement</option>
                                            <option value="Walk In" @(edit ? (elist[23].Contains("Walk In") ? "selected" : "") : "")>Walk In</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Source Details</label></td>
                                    <td><input type="text" name="enqsourcedetails" id="required" @(edit ? new { value = elist[24] } : null)></td>

                                    <td><label class="control-label">Sanction Type</label></td>
                                    <td>
                                        <select name="enqsanctiontype" id="required">
                                            <option value="NATP" @(edit ? (elist[25].Contains("NATP") ? "selected" : "") : "selected")>NATP</option>
                                            <option value="GP" @(edit ? (elist[25].Contains("GP") ? "selected" : "") : "")>GP</option>
                                            <option value="Both" @(edit ? (elist[25].Contains("Both") ? "selected" : "") : "")>Both</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    @if (edit)
                                    {
                                        <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                        <td> <input type="hidden" name="edit_id" value=@elist[10] /> </td>
                                    }
                                    else
                                    {
                                        <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                    }
                                </tr>
                                </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <!-- Site visit details-->
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Daily Enquiry - Site Visit Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_de_sitevisit","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Customer Name</label></td>
                                    <td><input type="text" name="enqname" id="required" @(edit ? new { value = elist[1] } : null)></td>
                                    <td><label class="control-label">Site Name</label></td>
                                    <td>
                                        <select name="enqsitename" id="enqsitename">    </select>
                                    </td>
                                    <td><label class="control-label">Type(Flat/Plot)</label></td>
                                    <td><input type="text" name="enqtype" id="required" @(edit ? new { value = elist[3] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Wing</label></td>
                                    <td><input type="text" name="enqwing" id="required" @(edit ? new { value = elist[4] } : null)></td>
                                    <td><label class="control-label">Flat/Plot No</label></td>
                                    <td><input type="number" name="enqflatno" id="required" @(edit ? new { value = elist[5] } : null)></td>
                                    <td><label class="control-label">Flat/Plot Size</label></td>
                                    <td><input type="number" name="enqsize" id="required" @(edit ? new { value = elist[6] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Executive1 Name</label></td>
                                    <td><input type="text" name="enqexename1" id="required" @(edit ? new { value = elist[7] } : null)></td>
                                    <td><label class="control-label">Executive2 Name</label></td>
                                    <td><input type="text" name="enqexename2" id="required" @(edit ? new { value = elist[8] } : null)></td>
                                    <td><label class="control-label">Executive3 Name</label></td>
                                    <td><input type="text" name="enqexename3" id="required" @(edit ? new { value = elist[9] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    @if (edit)
                                    {
                                        <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                        <td> <input type="hidden" name="edit_id" value=@elist[0] /> </td>
                                    }
                                    else
                                    {
                                        <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <!-- Customer Follow up details-->
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Daily Enquiry - Customer Follow Up</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_de_followup","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Customer Name</label></td>
                                    <td><input type="text" name="enqname" id="required" @(edit ? new { value = elist[27] } : null)></td>
                                    <td><label class="control-label">Follow up date</label></td>
                                    <td> <input type="date" name="enqfollow" id="required" @(edit ? new { value = @Convert.ToDateTime(elist[28]).ToString("yyyy-MM-dd") } : null)></td>
                                    <td><label class="control-label">Next Follow up Date</label></td>
                                    <td><input type="date" name="enqnextfollow" id="required" @(edit ? new { value = @Convert.ToDateTime(elist[29]).ToString("yyyy-MM-dd") } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Follow Details</label></td>
                                    <td><input type="text" name="enqfollowdetails" id="required" @(edit ? new { value = elist[30] } : null)></td>
                                    <td><label class="control-label">Executive1 Name</label></td>
                                    <td><input type="text" name="enqexename1" id="required" @(edit ? new { value = elist[31] } : null)></td>
                                    <td><label class="control-label">Executive2 Name</label></td>
                                    <td><input type="text" name="enqexename2" id="required" @(edit ? new { value = elist[32] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Executive3 Name</label></td>
                                    <td><input type="text" name="enqexename3" id="required" @(edit ? new { value = elist[33] } : null)></td>
                                    @if (edit)
                                    {
                                        <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                        <td> <input type="hidden" name="edit_id" value=@elist[26] /> </td>
                                    }
                                    else
                                    {
                                        <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <!--All Result details-->
            @if (!edit)
            {
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>All Enquiries</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @Html.Partial("page_size")
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Customer Name</th>
                                    <th>Address</th>
                                    <th>Mobile No</th>
                                    <th>Occupation</th>
                                    <th>Date</th>
                                    <th>Site</th>
                                    <th>Requirement</th>
                                    <th>Visit</th>
                                    <th>Interest</th>
                                    <th>Down Payment</th>
                                    <th>Booking</th>
                                    <th>Remark</th>
                                    <th>Modify</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < cnt; i++)
                                {
                                    <tr class="gradeX">
                                        <td>@results[0][i]</td>
                                        <td>@results[1][i]</td>
                                        <td>@results[2][i]</td>
                                        <td>@results[3][i]</td>
                                        <td>@results[7][i]</td>
                                        <td>@results[1][i]</td>
                                        <td>@results[16][i]</td>
                                        <td>@results[6][i]</td>
                                        <td>@results[11][i]</td>
                                        <td>@results[10][i]</td>
                                        <td>@results[5][i]</td>
                                        <td>@results[11][i]</td>
                                        <td>@results[12][i]</td>
                                        <td align="center">
                                            <button onclick="fun_edit(this);" value="@results[0][i]" class="btn btn-primary">Edit</button>
                                            <button onclick="fun_del(this);" value="@results[0][i]" class="btn btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("pagination")
                </div>
            }
        </div>
    </div>
</div>

