@{
    ViewBag.Title = "Daily Enquiry";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    int? sz = new int?();
    sz = ViewBag.pageSize;
    if (sz == null)
    {
        sz = 10;
    }
    var elist = ViewBag.edit_list;
    bool edit = false;
    if (ViewBag.edit_str == "edit")
    {
        edit = true;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Index", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("Index", "Home")'>Daily Enquiry</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Daily Enquiry - Customer Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_enquiry", "Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Customer Name</label></td>
                                    <td><input type="text" name="enqname" required @(edit ? new { value = (elist[1] == "" ? elist : elist[1].Replace(" ", "\u00A0")) } : null)></td>
                                    <td><label class="control-label">Address</label></td>
                                    <td> <input type="text" name="enqaddress" required @(edit ? new { value = elist[2].Replace(" ", "\u00A0") } : null)> </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Mobile No(Whatsapp)</label></td>
                                    <td><input type="number" name="enqmob" required @(edit ? new { value = elist[3] } : null)></td>
                                    <td><label class="control-label">Alternate Mobile</label></td>
                                    <td><input type="number" name="enqaltmob" id="required" @(edit ? new { value = elist[4] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Email Id</label></td>
                                    <td><input type="email" name="enqemail" id="required" @(edit ? new { value = elist[5] } : null)></td>
                                    <td><label class="control-label">Requirement</label></td>
                                    <td>
                                        <select multiple name="enqrequirement" id="required" style="max-width:65%;">
                                            <option value="1RK" @(edit ? (elist[6].Contains("1RK") ? "selected" : "") : "")>1RK</option>
                                            <option value="1BHK" @(edit ? (elist[6].Contains("1BHK") ? "selected" : "") : "")>1BHK</option>
                                            <option value="2BHK" @(edit ? (elist[6].Contains("2BHK") ? "selected" : "") : "")>2BHK</option>
                                            <option value="3BHK" @(edit ? (elist[6].Contains("3BHK") ? "selected" : "") : "")>3BHK</option>
                                            <option value="Plot" @(edit ? (elist[6].Contains("Plot") ? "selected" : "") : "")>Plot</option>
                                            <option value="Other" @(edit ? (elist[6].Contains("Other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Occupation</label></td>
                                    <td>
                                        <select name="enqoccu" id="required" style="max-width:65%;">
                                            <option value="Salaried" @(edit ? (elist[7].Contains("Salaried") ? "selected" : "") : "selected")>Salaried</option>
                                            <option value="Business" @(edit ? (elist[7].Contains("Business") ? "selected" : "") : "")>Business</option>
                                            <option value="Pensioner" @(edit ? (elist[7].Contains("Pensioner") ? "selected" : "") : "")>Pensioner</option>
                                            <option value="Other" @(edit ? (elist[7].Contains("Other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Income</label></td>
                                    <td><input type="number" name="enqincome" id="required" @(edit ? new { value = elist[8] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Budget</label></td>
                                    <td><input type="number" name="enqbudget" id="required" @(edit ? new { value = elist[9] } : null)></td>
                                    <td><label class="control-label">Down Payment</label></td>
                                    <td><input type="number" name="enqdown" id="required" @(edit ? new { value = elist[10] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Current Status</label></td>
                                    <td>
                                        <select name="enqcurstatus" id="required" style="max-width:65%;">
                                            <option value="Interested" @(edit ? (elist[12].Contains("Interested") ? "selected" : "") : "selected")>Interested</option>
                                            <option value="NotInterested" @(edit ? (elist[12].Contains("NotInterested") ? "selected" : "") : "")>Not Interested</option>
                                            <option value="InProcess" @(edit ? (elist[12].Contains("InProcess") ? "selected" : "") : "")>In Process</option>
                                            <option value="Booked" @(edit ? (elist[12].Contains("Booked") ? "selected" : "") : "")>Booked</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Visit</label></td>
                                    <td>
                                        <select name="enqvisit" id="required" style="max-width:65%;">
                                            <option value="Visited" @(edit ? (elist[11].Contains("Visited") ? "selected" : "") : "selected")>Visited</option>
                                            <option value="Enquiry" @(edit ? (elist[11].Contains("Enquiry") ? "selected" : "") : "")>Enquiry</option>
                                            <option value="Other" @(edit ? (elist[11].Contains("Other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Source</label></td>
                                    <td>
                                        <select name="enqsource" id="enqsource" style="max-width:65%;">
                                            <option value="Reference" @(edit ? (elist[13].Contains("Reference") ? "selected" : "") : "selected")>Reference</option>
                                            <option value="Advertisement" @(edit ? (elist[13].Contains("Advertisement") ? "selected" : "") : "")>Advertisement</option>
                                            <option value="Walk In" @(edit ? (elist[13].Contains("Walk In") ? "selected" : "") : "")>Walk In</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Source Details</label></td>
                                    <td><input type="text" name="enqsourcedetails" id="required" @(edit ? new { value = elist[14].Replace(" ", "\u00A0") } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Sanction Type</label></td>
                                    <td>
                                        <select name="enqsanctiontype" id="required" style="max-width:65%;">
                                            <option value="NATP" @(edit ? (elist[15].Contains("NATP") ? "selected" : "") : "selected")>NATP</option>
                                            <option value="GP" @(edit ? (elist[15].Contains("GP") ? "selected" : "") : "")>GP</option>
                                            <option value="Both" @(edit ? (elist[15].Contains("Both") ? "selected" : "") : "")>Both</option>
                                        </select>
                                    </td>
                                    @if (edit)
                                    {
                                        <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                        <td> <input type="hidden" name="edit_id" value=@elist[0] /> </td>
                                    }
                                    else
                                    {
                                        <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>

            <!--All Result details-->
            @if (!edit)
            {
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>All Enquiries</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @Html.Partial("page_size")
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Address</th>
                                    <th>Whatsup No</th>
                                    <th>Email</th>
                                    <th>Requirement</th>
                                    <th>Occupation</th>
                                    <th>Budget</th>
                                    <th>Currrent Status</th>
                                    <th>Source</th>
                                    @if (this.Session["role"].ToString() == "admin")
                                    {
                                        <th>Modify</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < cnt; i++)
                                {
                                    <tr class="gradeX">
                                        <td>@results[1][i]</td>
                                        <td>@results[2][i]</td>
                                        <td>@results[3][i]</td>
                                        <td>@results[5][i]</td>
                                        <td>@results[6][i]</td>
                                        <td>@results[7][i]</td>
                                        <td>@results[9][i]</td>
                                        <td>@results[12][i]</td>
                                        <td>@results[13][i]</td>
                                        @if (this.Session["role"].ToString() == "admin")
                                        {
                                            <td align="center">
                                                <button onclick="fun_edit(this);" value="@results[0][i]" class="btn btn-primary">Edit</button>
                                                <button onclick="fun_del(this);" value="@results[0][i]" class="btn btn-danger">Delete</button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("pagination")
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.ui.custom.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/matrix.popover.js"></script>
<script src="~/Scripts/jquery.uniform.js"></script>
<script src="~/Scripts/select2.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/matrix.js"></script>
<script src="~/Scripts/matrix.tables.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/matrix.form_validation.js"></script>

<script type="text/javascript">
    function fun_del(obj)
    {
        if (confirm('Are you sure you want to delete this record?'))
        {
            window.location = '@Html.Raw(@Url.Action("delete_record", "Home", new { page = "Index", ps = "id", search = "srch_str", del_id = "delid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("delid", obj.value);
        }
    }

    function fun_edit(obj)
    {
        window.location = '@Html.Raw(@Url.Action("edit_record", "Home", new { page = "Index", ps = "id", search = "srch_str", edit_id = "editid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("editid", obj.value);
    }
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#page_size").change(function () {
            window.location = '@Html.Raw(@Url.Action("Index", "Home", new { ps = "id", search = "srch_str" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val());
        });
    });

    $(document).ready(function () {
        $("#search1").keydown(function (event) {
            if (event.keyCode == 13) {
                window.location = '@Html.Raw(@Url.Action("Index", "Home", new { ps = "id", search = "srch_str" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val());
            }
        });
    });
</script>

