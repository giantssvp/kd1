@{
    ViewBag.Title = "Daily Enquiry";
}

@{
    var results = ViewBag.list;
    var elist = ViewBag.edit_list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    int? sz = new int?();
    sz = ViewBag.pageSize;
    if (sz == null)
    {
        sz = 10;
    }
    bool edit = false;
    if (ViewBag.edit_str == "edit")
    {
        edit = true;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Dashboard", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("Index", "Home")'>Daily Enquiry</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Daily Enquiry </h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_enquiry","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                            <table class="table table-striped">
                                <tbody>
                                    <tr class="odd gradeX">
                                        <td><label class="control-label">Customer Name</label></td>
                                        <td><input type="text" name="enqname" id="required" @(edit ? new { value = elist[2] } : null)></td>
                                        <td><label class="control-label">Address</label></td>
                                        <td> <input type="text" name="enqaddress" id="required"  @(edit ? new { value = elist[7] } : null)></td>
                                        <td><label class="control-label">Mobile No</label></td>
                                        <td><input type="number" name="enqmob" id="required"  @(edit ? new { value = elist[3] } : null)></td>
                                    </tr>
                                    <tr class="odd gradeX">
                                        <td><label class="control-label">Date</label></td>
                                        <td><input type="date" name="enqdate" id="required"  @(edit ? new { value = @Convert.ToDateTime(elist[1]).ToString("yyyy-MM-dd") } : null)></td>
                                        <td><label class="control-label">Site</label></td>
                                        <td>
                                            <select name="enqsite" id="enqsite">    </select>
                                        </td>
                                        <td><label class="control-label">Requirement</label></td>
                                        <td>
                                            <select multiple name="enqrequirement" id="required">
                                                <option value="1RK" @(edit ? (elist[4].Contains("1RK") ? "selected" : "") : "selected")>1RK</option>
                                                <option value="1BHK" @(edit ? (elist[4].Contains("1BHK") ? "selected" : "") : "")>1BHK</option>
                                                <option value="2BHK" @(edit ? (elist[4].Contains("2BHK") ? "selected" : "") : "")>2BHK</option>
                                                <option value="3BHK" @(edit ? (elist[4].Contains("3BHK") ? "selected" : "") : "")>3BHK</option>
                                                <option value="Other" @(edit ? (elist[4].Contains("Other") ? "selected" : "") : "")>Other</option>
                                            </select>
                                            <input type="text" name="enqrequirementother" id="required">
                                        </td>
                                    </tr>
                                    <tr class="odd gradeX">
                                        <td><label class="control-label">Occupation</label></td>
                                        <td>
                                            <select name="enqoccu" id="required">
                                                <option value="Salaried" @(edit ? (elist[8].Contains("Salaried") ? "selected" : "") : "selected")>Salaried</option>
                                                <option value="Business" @(edit ? (elist[8].Contains("Business") ? "selected" : "") : "")>Business</option>
                                                <option value="Pensioner" @(edit ? (elist[8].Contains("Pensioner") ? "selected" : "") : "")>Pensioner</option>
                                                <option value="Other" @(edit ? (elist[8].Contains("Other") ? "selected" : "") : "")>Other</option>
                                            </select>
                                        </td>
                                        <td><label class="control-label">Visit</label></td>
                                        <td>
                                            <select name="enqvisit" id="required">
                                                <option value="Yes" @(edit ? (elist[9].Contains("Yes") ? "selected" : "") : "selected")>Yes</option>
                                                <option value="No" @(edit ? (elist[9].Contains("No") ? "selected" : "") : "")>No</option>
                                                <option value="Other" @(edit ? (elist[9].Contains("Other") ? "selected" : "") : "")>Other</option>
                                            </select>
                                        </td>
                                        <td><label class="control-label">Interest</label></td>
                                        <td>
                                            <select name="enqinterest" id="required">
                                                <option value="Yes" @(edit ? (elist[10].Contains("Yes") ? "selected" : "") : "selected")>Yes</option>
                                                <option value="No" @(edit ? (elist[10].Contains("No") ? "selected" : "") : "")>No</option>
                                                <option value="Other" @(edit ? (elist[10].Contains("Other") ? "selected" : "") : "")>Other</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr class="odd gradeX">
                                        <td><label class="control-label">Budget</label></td>
                                        <td><input type="number" name="enqbudget" id="required"  @(edit ? new { value = elist[6] } : null)></td>
                                        <td><label class="control-label">Down Payment</label></td>
                                        <td><input type="number" name="enqdown" id="required"  @(edit ? new { value = elist[5] } : null)></td>
                                        <td><label class="control-label">Booking</label></td>
                                        <td>
                                            <select name="enqbooking" id="required">
                                                <option value="Yes" @(edit ? (elist[11].Contains("Yes") ? "selected" : "") : "selected")>Yes</option>
                                                <option value="No" @(edit ? (elist[11].Contains("No") ? "selected" : "") : "")>No</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr class="odd gradeX">
                                        <td><label class="control-label">Remark</label></td>
                                        <td> <textarea class="span11" name="enqremark">@(edit ? elist[12] : null)</textarea></td>

                                        @if (edit)
                                        {
                                            <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                            <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                            <td> <input type="hidden" name="edit_id" value=@elist[0] /> </td>                                            
                                        }
                                        else
                                        {
                                            <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                            <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </form>
</div>
            </div>
            @if (!edit)
            {
                <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>All Enquiries</h5> 
                </div>
                <div class="widget-content nopadding">
                    @Html.Partial("page_size")                    
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Customer Name</th>
                                    <th>Address</th>
                                    <th>Mobile No</th>
                                    <th>Occupation</th>
                                    <th>Date</th>
                                    <th>Site</th>
                                    <th>Requirement</th>
                                    <th>Visit</th>
                                    <th>Interest</th>
                                    <th>Down Payment</th>
                                    <th>Booking</th>
                                    <th>Remark</th>
                                    <th>Modify</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < cnt; i++)
                                {
                                    <tr class="gradeX">
                                        <td>@results[0][i]</td>
                                        <td>@results[2][i]</td>
                                        <td>@results[7][i]</td>
                                        <td>@results[3][i]</td>
                                        <td>@results[8][i]</td>
                                        <td>@results[1][i]</td>
                                        <td>@results[13][i]</td>
                                        <td>@results[4][i]</td>
                                        <td>@results[9][i]</td>
                                        <td>@results[10][i]</td>
                                        <td>@results[5][i]</td>
                                        <td>@results[11][i]</td>
                                        <td>@results[12][i]</td>
                                        <td align="center">
                                            <button onclick="fun_edit(this);" value="@results[0][i]" class="btn btn-primary">Edit</button>
                                            <button onclick="fun_del(this);" value="@results[0][i]" class="btn btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("pagination")                
                </div>
            }
        </div>
    </div>
</div>

