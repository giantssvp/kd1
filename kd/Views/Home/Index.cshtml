<script type="text/javascript">
    function fun_del(obj)
    {
        if (confirm('Are you sure you want to delete this record?'))
        {
            window.location = '@Html.Raw(@Url.Action("delete_record", "Home", new { page = "Index", ps = "id", search = "srch_str", del_id = "delid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("delid", obj.value);
        }
    }

    function fun_edit(obj)
    {
        window.location = '@Html.Raw(@Url.Action("edit_record", "Home", new { page = "Index", ps = "id", search = "srch_str", edit_id = "editid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("editid", obj.value);
    }
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#page_size").change(function () {
            window.location = '@Html.Raw(@Url.Action("Index", "Home", new { ps = "id", search = "srch_str" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val());
        });
    });

    $(document).ready(function () {
        $("#search1").keydown(function (event) {
            if (event.keyCode == 13) {
                window.location = '@Html.Raw(@Url.Action("Index", "Home", new { ps = "id", search = "srch_str" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val());
            }
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: '@Url.Action("get_site", "Home")',
            data: {},
            dataType: 'json',
            success: function (d) {
                var list1 = d.id;
                var list = d.name;
                
                $("#enqsite").html("");
                $.each(list, function (index, value) {
                    $("#enqsite").append($('<option></option>').val(list1[index]).html(value));        
                });
                document.getElementById("enqsite").value = @(edit ? elist[13] : 1);                
            },
            error: function (err) {
                alert(err.responseText);
            },
        });
    });
</script>

