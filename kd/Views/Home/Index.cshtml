@{
    ViewBag.Title = "Daily Enquiry";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    int? sz = new int?();
    sz = ViewBag.pageSize;
    if (sz == null)
    {
        sz = 10;
    }
}

