@{
    ViewBag.Title = "Booking";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Dashboard", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("Booking", "Home")'>Add Booking</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Add Booking Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_booking","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Booking No</label></td>
                                    <td><input type="text" name="bno" id="required"></td>
                                    <td><label class="control-label">Referred By</label></td>
                                    <td> <input type="text" name="breferred" id="required"></td>
                                    <td><label class="control-label">Incentive Paid</label></td>
                                    <td><input type="text" name="bincentive" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Total incentive</label></td>
                                    <td><input type="text" name="bincome" id="required"></td>
                                    <td><label class="control-label">Flat Canceld By</label></td>
                                    <td> <input type="text" name="bcancel" id="required"></td>
                                    <td><label class="control-label">Total Flat Amount</label></td>
                                    <td><input type="text" name="btamount" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Received Amount</label></td>
                                    <td><input type="text" name="bramount" id="required"></td>
                                    <td><label class="control-label">Total Builder Received</label></td>
                                    <td> <input type="text" name="bblder" id="required"></td>
                                    <td><label class="control-label">Reserved Parking</label></td>
                                    <td><input type="text" name="bparking" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Internal Charges</label></td>
                                    <td><input type="text" name="bcharges" id="required"></td>
                                    <td><label class="control-label">Follow Up Date</label></td>
                                    <td> <input type="text" name="bfollowup" id="required"></td>
                                    <td><label class="control-label">Status</label></td>
                                    <td><input type="text" name="bstatus" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Remarks</label></td>
                                    <td><input type="text" name="bremark" id="required"></td>
                                    <td><label class="control-label">Sites</label></td>
                                    <td> <input type="text" name="psgst" id="required"></td>
                                    <td><label class="control-label">Flats</label></td>
                                    <td><input type="text" name="bflats" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Applicant</label></td>
                                    <td><input type="text" name="bapplicant" id="required"></td>
                                    <td><label class="control-label">Executive</label></td>
                                    <td> <input type="text" name="bexecutive" id="required"></td>
                                    <td><label class="control-label">Franchies</label></td>
                                    <td><input type="text" name="bfranchies" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><input type="submit" value="Save" class="btn btn-success" /></td>
                                    <td><input type="submit" value="Cancel" class="btn btn-danger" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>All Booking</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("Booking","Home")" name="pc" id="pc">
                        <input type="hidden" id="ps" name="ps" value="10" />
                    </form>
                    <table class="table table-bordered data-table with-check">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Booking No</th>
                                <th>Applicant Name</th>
                                <th>Site</th>
                                <th>Flat</th>
                                <th>Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < cnt; i++)
                            {
                                <tr class="gradeX">
                                    <td>@results[0][i]</td>
                                    <td>@results[1][i]</td>
                                    <td>@results[2][i]</td>
                                    <td>@results[3][i]</td>
                                    <td>@results[4][i]</td>
                                    <td>@results[5][i]</td>
                                    <td align="center"><button class="btn btn-primary">Edit</button> <button class="btn btn-danger">Delete</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.ui.custom.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/matrix.popover.js"></script>
<script src="~/Scripts/jquery.uniform.js"></script>
<script src="~/Scripts/select2.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/matrix.js"></script>
<script src="~/Scripts/matrix.tables.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/matrix.form_validation.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#DataTables_Table_0_length").change(function () {
            document.getElementById("ps").value = $("#DataTables_Table_0_length option:selected").text();
            document.getElementById('pc').submit();
        });
    });
</script>