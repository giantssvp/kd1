@{
    ViewBag.Title = "FileStatus";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    var elist = ViewBag.edit_list;
    bool edit = false;
    if (ViewBag.edit_str == "edit")
    {
        edit = true;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Index", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("FileSatus", "Home")'>Add File Status</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>File Process Charges</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_filestatus","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Service Charge</label></td>
                                    <td>
                                        <select name="chrg" id="required">
                                            <option value="Before" @(edit ? (elist[1].Contains("Before") ? "selected" : "") : "selected")>Before</option>
                                            <option value="After" @(edit ? (elist[1].Contains("After") ? "selected" : "") : "")>After</option>
                                            <option value="Other" @(edit ? (elist[1].Contains("Other") ? "selected" : "") : "")>Other</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Loan Fees Amount</label></td>
                                    <td> <input type="number" name="lfamt" id="required" @(edit ? new { value = elist[2] } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Cheque ID</label></td>
                                    <td><input type="text" name="chid" id="required" @(edit ? new { value = elist[3].Replace(" ", "\u00A0") } : null)></td>

                                    <td><label class="control-label">Cheque Date</label></td>
                                    <td><input type="date" name="chdate" id="required" @(edit ? new { value = @Convert.ToDateTime(elist[4]).ToString("yyyy-MM-dd") } : null)></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Bank Name</label></td>
                                    <td> <input type="text" name="bnknm" id="required" @(edit ? new { value = elist[5].Replace(" ", "\u00A0") } : null)></td>
                                    <td><label class="control-label">Loan Fees</label></td>
                                    <td>
                                        <select name="lfee" id="required">
                                            <option value="Paid" @(edit ? (elist[6].Contains("Paid") ? "selected" : "") : "selected")>Paid</option>
                                            <option value="Unpaid" @(edit ? (elist[6].Contains("Unpaid") ? "selected" : "") : "")>Unpaid</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Finance ID</label></td>
                                    <td>
                                        <select name="financename" id="financename"  @(edit ? new { value = elist[8] } : null)>  </select>                                  
                                    </td>
                                    <td><label class="control-label">Status</label></td>
                                    <td> <textarea class="span11" name="fstatus">@(edit ? elist[7] : null)</textarea></td>
                                </tr>
                                <tr class="odd gradeX">
                                    @if (edit)
                                    {
                                        <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                        <td> <input type="hidden" name="edit_id" value=@elist[0] /> </td>
                                    }
                                    else
                                    {
                                        <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            @if (!edit)
            {
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>All File Status</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @Html.Partial("page_size")
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Finance Name</th>
                                    <th>Service Charge</th>
                                    <th>Loan Fees Amount</th>
                                    <th>Cheque ID</th>
                                    <th>Cheque Date</th>
                                    <th>Bank Name</th>
                                    <th>Loan Fees</th>
                                    <th>Status</th>
                                    @if (this.Session["role"].ToString() == "admin")
                                    {
                                        <th>Modify</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < cnt; i++)
                                {
                                <tr class="gradeX">
                                    <td>@results[0][i]</td>
                                    <td>@results[11][i]</td>
                                    <td>@results[1][i]</td>
                                    <td>@results[2][i]</td>
                                    <td>@results[3][i]</td>
                                    <td>@Convert.ToDateTime(results[4][i]).ToString("dd-MM-yyyy")</td>
                                    <td>@results[5][i]</td>
                                    <td>@results[6][i]</td>
                                    <td>@results[7][i]</td>
                                    @if (this.Session["role"].ToString() == "admin")
                                    {
                                        <td align="center">
                                            <button onclick="fun_edit(this);" value="@results[0][i]" class="btn btn-primary">Edit</button>
                                            <button onclick="fun_del(this);" value="@results[0][i]" class="btn btn-danger">Delete</button>
                                        </td>
                                    }
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("pagination")
                </div>
            }
            </div>
    </div>
</div>

