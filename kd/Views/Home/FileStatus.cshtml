<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: '@Url.Action("get_finance", "Home")',
            data: {},
            dataType: 'json',
            success: function (d) {
                var list1 = d.id;
                var list = d.name;
                $("#financename").html("");
                $.each(list, function (index, value) {
                    $("#financename").append($('<option></option>').val(list1[index]).html(value));
                });
                @if (edit) {
                    <text> document.getElementById("financename").value = @(edit ? elist[8] : 1); </text>
                }
                else {
                    <text> document.getElementById("financename").selectedIndex = "0"; </text>
                }
            },
            error: function (err) {
                alert(err.responseText);
            },
        });
    });
</script>

<script type="text/javascript">
    function fun_del(obj)
    {
        if (confirm('Are you sure you want to delete this record?'))
        {
            window.location = '@Html.Raw(@Url.Action("delete_record", "Home", new { page = "FileStatus", ps = "id", search = "srch_str", del_id = "delid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("delid", obj.value);
        }
    }

    function fun_edit(obj)
    {
        window.location = '@Html.Raw(@Url.Action("edit_record", "Home", new { page = "FileStatus", ps = "id", search = "srch_str", edit_id = "editid" }))'.replace("id", $("#page_size option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("editid", obj.value);
    }
</script>

