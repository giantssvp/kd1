@{
    ViewBag.Title = "Followup";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    int? sz = new int?();
    sz = ViewBag.pageSize;
    if (sz == null)
    {
        sz = 10;
    }
    var elist = ViewBag.edit_list;
    bool edit = false;
    if (ViewBag.edit_str == "edit")
    {
        edit = true;
    }
}

