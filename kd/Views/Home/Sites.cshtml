</script>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: '@Url.Action("get_site", "Home")',
            data: {},
            dataType: 'json',
            success: function (d) {
                var list1 = d.id;
                var list = d.name;
                $("#flatsitename").html("");
                $.each(list, function (index, value) {
                    $("#flatsitename").append($('<option></option>').val(list1[index]).html(value));
                });
            },
            error: function (err) {
                alert(err.responseText);
            },
        });
    });
</script>

