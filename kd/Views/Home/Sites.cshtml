@{
    ViewBag.Title = "Sites";

}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    var sites = ViewBag.sites;
    int? site_cnt = new int?();
    site_cnt = ViewBag.total_site;
    if (site_cnt == null)
    {
        site_cnt = 0;
    }
}

