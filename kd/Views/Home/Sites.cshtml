<script type="text/javascript">
    function fun(obj)
    {
        if (confirm('Are you sure you want to delete this record?'))
        {            
            window.location = '@Html.Raw(@Url.Action("delete_record", "Home", new { page = "Sites", ps = "id", site = "name", search = "srch_str", del_id = "delid" }))'.replace("id", $("#page_size option:selected").text()).replace("name", $("#site_name option:selected").text()).replace("srch_str", $('input:text[name=search]').val()).replace("delid", obj.value);
        }
    }
</script>

