<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Dashboard", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("Sites", "Home")'>Sites</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Add Site Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_sites","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Site Name</label></td>
                                    <td><input type="text" name="sitename" id="required"></td>
                                    <td><label class="control-label">Site Address</label></td>
                                    <td> <input type="text" name="siteaddress" id="required"></td>
                                    <td><label class="control-label">Phone No</label></td>
                                    <td><input type="number" name="sitephone" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Email ID</label></td>
                                    <td><input type="email" name="siteemail" id="required"></td>
                                    <td><label class="control-label">Status</label></td>
                                    <td> <input type="text" name="sitestatus" id="required"></td>
                                    <td><input type="submit" value="Save" class="btn btn-success" /></td>
                                    <td><input type="reset" value="Cancel" class="btn btn-danger" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>

            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Add Flat Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_flats","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Site Name</label></td>
                                    <td>
                                        <select name="flatsitename" id="flatsitename">    </select>
                                    </td>
                                    <td><label class="control-label">Wing Name</label></td>
                                    <td> <input type="text" name="flatwing" id="required"></td>
                                    <td><label class="control-label">Floor</label></td>
                                    <td><input type="number" name="flatfloor" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Flat No</label></td>
                                    <td><input type="number" name="flatno" id="required"></td>
                                    <td><label class="control-label">Flat Type</label></td>
                                    <td> 
                                        <select multiple name="flattype" id="required">
                                            <option value="1RK" selected="selected">1RK</option>
                                            <option value="1BHK">1BHK</option>
                                            <option value="2BHK">2BHK</option>
                                            <option value="3BHK">3BHK</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    <input type="text" name="flattype" id="required"></td>
                                    <td><label class="control-label">Flat Area</label></td>
                                    <td><input type="number" name="flatarea" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Flat Status</label></td>
                                    <td><input type="text" name="flatstatus" id="required"></td>
                                    <td><input type="submit" value="Save" class="btn btn-success" /></td>
                                    <td><input type="reset" value="Cancel" class="btn btn-danger" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>All Sites and Flats:-</h5>
                    <div class="select-site">
                        <h5>Select Flats by Site </h5>
                        <div class="dataTables_length"> 
                            <select name="site_name" id="site_name">                                
                                @for (var i = 0; i < site_cnt; i++)
                                {
                                    <option value=@sites[0][i] @(ViewBag.site == sites[1][i] ? "selected" : "")>@sites[1][i]</option>
                                }
                            </select>
                        </div>
                    </div>
                 </div>
                <div class="widget-content nopadding">
                    @Html.Partial("page_size")
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Wing Name</th>
                                <th>Floor</th>
                                <th>Flat No</th>
                                <th>Flat Type</th>
                                <th>Flat Area</th>
                                <th>Status</th>
                                <th>Modify</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < cnt; i++)
                            {
                                <tr class="gradeX">
                                    <td>@results[0][i]</td>
                                    <td>@results[5][i]</td>
                                    <td>@results[2][i]</td>
                                    <td>@results[1][i]</td>
                                    <td>@results[4][i]</td>
                                    <td>@results[3][i]</td>
                                    <td>@results[7][i]</td>                                    
                                    <td align="center">
                                        <button class="btn btn-primary">Edit</button>
                                        <button onclick="fun(this);" value="@results[0][i]" class="btn btn-danger">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @Html.Partial("pagination")
            </div>
        </div>
    </div>
</div>

