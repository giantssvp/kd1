@{
    ViewBag.Title = "PaymentCommit";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Dashboard", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("PaymentCommit", "Home")'>Payment Commitment</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Add Payment commit Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_paymentcommit","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Commitment Type</label></td>
                                    <td>
                                        <select name="ctype" id="required">
                                            <option value="token" selected="selected">Token Amount</option>
                                            <option value="booking">Booking Amount</option>
                                            <option value="agreement">Agreement Amount</option>
                                            <option value="commitment">Notary Amount</option>
                                            <option value="commitment">Extra Amount</option>
                                            <option value="commitment">Adjustment Amount</option>
                                            <option value="commitment">Commitment Amount</option>
                                            <option value="other">Other</option>
                                        </select>
                                    </td>
                                    <td><label class="control-label">Amount</label></td>
                                    <td> <input type="number" name="camount" id="required"></td>
                                    <td><label class="control-label">Date</label></td>
                                    <td><input type="date" name="cstatus" id="required"></td>
                                </tr>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Customer Name</label></td>
                                    <td>
                                        <select name="bid" id="bid">    </select>
                                    </td>
                                    <td><label class="control-label">Remark</label></td>
                                    <td> <textarea class="cremark" name="cremark"></textarea></td>
                                    <td><input type="submit" value="Save" class="btn btn-success" /></td>
                                    <td><input type="reset" value="Cancel" class="btn btn-danger" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>Payment Commitment</h5> 
                    <div class="select-site">
                        <h5>Booking Name</h5>
                        <div class="dataTables_length">
                            <select name="site_name" id="site_name" style="max-width:90%;">
                               <option value="Mangesh"> Mangesh</option>
                                <option value="Ramesh"> Ramesh</option>
                                <option value="Shivaji"> Shivaji</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="widget-content nopadding">
                    @Html.Partial("page_size")
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Commit Type</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Remark</th>
                                <th>Bkno</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < cnt; i++)
                            {
                                <tr class="gradeX">
                                    <td>@results[0][i]</td>
                                    <td>@results[1][i]</td>
                                    <td>@results[2][i]</td>
                                    <td>@results[4][i]</td>
                                    <td>@results[5][i]</td>
                                    <td>@results[6][i]</td>
                                    <td align="center"><button class="btn btn-primary">Edit</button> <button class="btn btn-danger">Delete</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @Html.Partial("pagination")
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
