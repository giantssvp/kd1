@{
    ViewBag.Title = "ExecutiveIncentives";
}

@{
    var results = ViewBag.list;
    int? cnt = new int?();
    cnt = ViewBag.total;
    if (cnt == null)
    {
        cnt = 0;
    }
    var elist = ViewBag.edit_list;
    bool edit = false;
    if (ViewBag.edit_str == "edit")
    {
        edit = true;
    }
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
<link rel="stylesheet" href="~/Content/matrix-style.css" />
<link rel="stylesheet" href="~/Content/matrix-media.css" />
<link rel="stylesheet" href="~/Content/uniform.css" />
<link rel="stylesheet" href="~/Content/select2.css" />
<link href="~/fonts/gst_font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

<div id="content-header">
    <div id="breadcrumb"> <a href='@Url.Action("Index", "Home")' title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href='@Url.Action("ExecutiveIncentives", "Home")'>Add Incetive details</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Executive/Franchies Incentive Details</h5>
                </div>
                <div class="widget-content nopadding">
                    <form method="post" action="@Url.Action("add_exe_franc_incentive","Home")" name="basic_validate" id="basic_validate" novalidate="novalidate">
                        <table class="table table-striped">
                            <tbody>
                                <tr class="odd gradeX">
                                    <td><label class="control-label">Executive/Franchies Name</label></td>
                                    <td>
                                        <select name="ename" id="ename">  </select>
                                    </td>
                                    <td><label class="control-label">Total Paid Amount</label></td>
                                    <td><input type="number" name="paidamt" id="required" @(edit ? new { value = elist[2] } : null)></td>
                                </tr>
                                @Html.Partial("booking_fk")
                                <tr class="odd gradeX">
                                    @if (edit)
                                    {
                                        <td><input type="submit" name="submit_btn" value="Update" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="submit" name="submit_btn" value="Cancel" class="btn btn-danger" /> </td>
                                        <td> <input type="hidden" name="edit_id" value=@elist[0] /> </td>
                                    }
                                    else
                                    {
                                        <td><input type="submit" name="submit_btn" value="Save" class="btn btn-success" /></td>
                                        <td colspan="3"> <input type="reset" value="Cancel" class="btn btn-danger" /> </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
            @if (!edit)
            {
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>Executive/Franchies Incentive Details</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @Html.Partial("page_size")
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Exe/Fran Name</th>
                                    <th>Applicant</th>
                                    <th>Site</th>
                                    <th>Wing-Flat</th>
                                    <th>Address</th>
                                    <th>Total Share</th>
                                    <th>Paid Amount</th>
                                    @if (this.Session["role"].ToString() == "admin")
                                    {
                                        <th>Modify</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < cnt; i++)
                                {
                                    <tr class="gradeX">
                                        <td>@results[0][i]</td>
                                        <td>@results[7][i]</td>
                                        <td>@results[47][i]</td>
                                        <td>@results[31][i]</td>
                                        <td>@results[43][i]-@results[39][i]</td>
                                        <td>@results[35][i]</td>
                                        <td>@results[5][i]</td>
                                        <td>@results[1][i]</td>
                                        @if (this.Session["role"].ToString() == "admin")
                                        {
                                            <td align="center">
                                                <button onclick="fun_edit(this);" value="@results[0][i]" class="btn btn-primary">Edit</button>
                                                <button onclick="fun_del(this);" value="@results[0][i]" class="btn btn-danger">Delete</button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.Partial("pagination")
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.min.js"></script>
